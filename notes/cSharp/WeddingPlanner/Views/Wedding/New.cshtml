@model Wedding
<div class="container w-75 mx-auto">
    <h2>Plan a Wedding</h2>
    <form class= "shadow p-3 rounded" asp-action="CreateWed" asp-controller="Wedding" method="POST">
        <div class="form-group">
            <label for="WedderOne">Wedder One</label>
            <input asp-for="WedderOne" class="form-control">
            <span asp-validation-for="WedderOne" class="text-danger font-weight-bold"></span>
        </div>

        <div class="form-group">
            <label for="WedderTwo">Wedder Two</label>
            <input asp-for="WedderTwo" class="form-control">
            <span asp-validation-for="WedderTwo" class="text-danger font-weight-bold"></span>
        </div>

        <div class="form-group">
            <label for="Date">Date</label>
            <input asp-for="Date"  type="date" class="form-control">
            <span asp-validation-for="Date" class="text-danger font-weight-bold"></span> 
            @* the asp-validation is to render the error message from @model Survey *@
        </div>
            <div class="form-group">
            <label for="Address">Address</label>
            <input asp-for="Address" class="form-control">
            <span asp-validation-for="Address" class="text-danger font-weight-bold"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary">
        </div>
    </form>
</div>